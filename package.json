{
    "name": "slushii-postcss",
    "version": "1.0.1",
    "description": "The POSTCSS Version of The Slushii CSS Framework",
    "main": "index.js",
    "scripts": {
        "watch:css": "postcss css/slushii.css -o dest/slushii.css -w --env development",
        "build:css": "postcss css/slushii.css -o dest/slushii.css --env production",
        "serve": "vite --port 3000 --open",
        "dev": "npm run serve & npm run watch:css",
        "browser-list-update": "npx update-browserslist-db@latest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DReece-dev/Slushii-POSTCSS.git"
    },
    "keywords": [
        "css",
        "postcss",
        "flexbox",
        "grid",
        "slushii",
        "cssframework",
        "framework"
    ],
    "author": "Dylan Reece",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/DReece-dev/Slushii-POSTCSS/issues"
    },
    "homepage": "https://github.com/DReece-dev/Slushii-POSTCSS#readme",
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^7.0.2",
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.1.1",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "vite": "^7.1.5"
    }
}
